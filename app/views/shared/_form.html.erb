<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= simple_form_for(@attraction) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name, label: "Nom de l'attraction" %>
          <%= f.input :attraction_type, label: "Type d'attraction", priority: ["Rodéo"], collection: [ "Montagnes Rousses", "Chateau Gonflable", "Rodéo","Horreur","sensation","pêche aux canard"] %>
          <%= f.input :description, label: "Description" %>
          <%= f.input :playersmax, label: "Nombre de personne max", priority: [10], collection: 1..100 %>
          <%= f.input :price, label: "Prix / Jour " %>
          <%= f.input :location, label: "Emplacement de stockage" %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="center-button-creation-attraction">
          <div class="form-actions text-center">
            <%= f.button :submit, "Attraction prêt à louer !", class: 'btn-search btn-large' %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>


