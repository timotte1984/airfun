<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= simple_form_for(@attraction) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :attraction_type %>
          <%= f.input :description %>
          <%= f.input :playersmax %>
          <%= f.input :price %>
          <%= f.input :location %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Create / Update", class: 'btn-search btn-lg' %>
        </div>
      <% end %>
      <div class="btn-default">
        <%= link_to 'Back', attractions_path %>
      </div>
    </div>
  </div>
</div>


