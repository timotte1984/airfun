<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= simple_form_for(@attraction) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name, label: "Nom" %>
          <%= f.input :attraction_type, label: "Type d'attraction" %>
          <%= f.input :description, label: "Description" %>
          <%= f.input :playersmax, label: "Nombre de personne max" %>
          <%= f.input :price, label: "Prix" %>
          <%= f.input :location, label: "Emplacement" %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "CrÃ©er", class: 'btn-search btn-lg' %>
        </div>
      <% end %>
      <div class="btn-default">
        <%= link_to 'Retour', attractions_path %>
      </div>
    </div>
  </div>
</div>


