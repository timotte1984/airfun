<%= simple_form_for(@attraction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :attraction_type %>
    <%= f.input :playersmax %>
    <%= f.input :price %>
    <%= f.input :location %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create / Update" %>
  </div>
<% end %>
