<div class="navbar-wagon">
  <!-- Logo -->
  <div class="logo-btn-owner">
    <%= link_to root_path do %>
      <%= image_tag "logo.png", alt: "logo", width:"50" %>
    <% end %>
    <%= link_to "Add Attraction", new_attraction_path, class:"btn btn-owner" %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <div class="link-i">
      <%= link_to "#", class:"navbar-wagon-item navbar-wagon-link" do %>
        <i class="far fa-comment white"></i>
      <% end %>
      <%= link_to "#", class:"navbar-wagon-item navbar-wagon-link" do %>
        <i class="far fa-bell white"></i>
      <% end %>
    </div>

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <% if user_signed_in? %>
      <div class="dropdown">
        <img src="https://78.media.tumblr.com/avatar_d10fc8689e88_128.pnj" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "Profil", "#" %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <%= t(".sign_out", default: "Se déconnecter") %>
            <% end %>
          </li>
        </ul>
      </div>
        <% else %>
          <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link btn-login" %>
        <% end %>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <% if user_signed_in? %>
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle white" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "Messages", "#" %>
          </li>
          <li>
            <%= link_to "Notification", "#" %>
          </li>
          <li>
            <%= link_to "Profil", "#" %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <%= t(".sign_out", default: "Se déconnecter") %>
            <% end %>
          </li>
        </ul>
      </div>
    <% else %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
</div>
