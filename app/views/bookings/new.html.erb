   <%= link_to "back to attraction", attraction_path(@attraction), class: 'btn btn-primary btn-lg' %>
  </div>

<div class="container">
  <div class="col-md-4 col-md-offset-4">

    <h2>Time to Book</h2>

    <%= simple_form_for([@attraction, @booking]) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :start_time %>
        <%= f.input :description %>
        <%= f.input :end_time %>
        <%= f.input :place %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Reservation", class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>


</div>

