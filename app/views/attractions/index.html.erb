<div class="wrapper">
  <div class="container">
    <h2>Tous les loisirs</h2>
      <div class="container">
        <div class="row">
          <% @attractions.each do |attraction| %>
            <div class="col-xs-12 col-sm-3">
              <div class="card", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= attraction.photo %>)">
                <div class="card-description">
                  <h2><%= attraction.name %></h2>
                  <p>Price : <%= attraction.price %> â‚¬ </p>
                </div>
                  <%= image_tag "logo.png", alt:"img", class: "card-user" %>
                  <%= link_to "#", attraction_path(attraction), class:"card-link" %>
              </div>
               <%= link_to edit_attraction_path(attraction), class:"logo-edit" do %>
               <i class="fas fa-edit i-btn"></i>
               <% end %>

              <%= link_to attraction_path(attraction), method: :delete, data: {confirm: "Really delete this article?"} do %>
                <i class="fas fa-trash-alt i-btn"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
